{
    "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.19/MicrosoftTeams.schema.json",
    "manifestVersion": "1.19",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "developer": {
        "name": "Teams App, Inc.",
        "websiteUrl": "https://www.example.com",
        "privacyUrl": "https://www.example.com/privacy",
        "termsOfUseUrl": "https://www.example.com/termofuse"
    },
    "icons": {
        "color": "192.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "IT Helpdesk 101${{APP_NAME_SUFFIX}}",
        "full": "Full name for IT Helpdesk 101"
    },
    "description": {
        "short": "This agent provides IT helpdesk support.",
        "full": "This agent offers IT helpdesk support, assisting with common IT issues like connecting to the office Wi-Fi network and managing your cases. You can create new cases, update existing ones, and check their status all from within M365 Copilot Chat."
    },
    "accentColor": "#FFFFFF",
    "composeExtensions": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "copilotAgents": {
        "declarativeAgents": [
            {
                "id": "declarativeAgent",
                "file": "declarativeAgent.json"
            }
        ]
    },
    "validDomains": []
}
